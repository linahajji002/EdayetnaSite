 <script>// script recherche
document.addEventListener("DOMContentLoaded", function () {
    // Sélectionne l'élément de saisie pour la recherche
    let searchInput = document.getElementById("searchInput");

    // Fonction qui filtre les lignes du tableau en fonction du texte saisi
    function filterTable() {
        // Récupère la valeur tapée dans l'input et la met en minuscules pour éviter la casse
        let searchText = searchInput.value.toLowerCase();

        // Sélectionne toutes les lignes du tableau (dans <tbody>)
        let rows = document.querySelectorAll("tbody tr");

        // Parcours chaque ligne du tableau
        rows.forEach(row => {
            // Sélectionne la cellule correspondant au nom du fournisseur
            let nameCell = row.querySelector("td:nth-child(1)"); 

            if (nameCell) {
                // Récupère le texte du nom du founisseur et le met en minuscules
                let nameText = nameCell.innerText.toLowerCase();
                
                // Vérifie si le texte tapé correspond au début du nom du founisseur
                let textMatch = searchText === "" || nameText.startsWith(searchText); 

                // Affiche la ligne si elle correspond à la recherche, sinon la cache
                if (textMatch) {
                    row.style.display = "";  // Afficher la ligne
                } else {
                    row.style.display = "none";  // Cacher la ligne
                }
            }
        });
    }

    // Ajoute un écouteur d'événement pour détecter la saisie dans le champ de recherche
    searchInput.addEventListener("input", filterTable);
});



let sortOrder = true; // true pour croissant, false pour décroissant

function sortTableByName() {
    const table = document.querySelector("table tbody"); // Sélectionne toutes les lignes du tableau
    const rows = Array.from(table.rows); // Convertit les lignes du tableau en tableau pour pouvoir les trier

    const sortedRows = rows.sort((a, b) => {
        const aName = a.cells[0].innerText.toLowerCase(); // Récupère le texte de la première cellule (nom) de la ligne "a"
        const bName = b.cells[0].innerText.toLowerCase(); // Idem pour la ligne "b"
        
        if (sortOrder) {
            // Tri croissant
            return aName.localeCompare(bName);
        } else {
            // Tri décroissant
            return bName.localeCompare(aName);
        }
    });

    // Remplace les anciennes lignes par les nouvelles lignes triées
    sortedRows.forEach(row => table.appendChild(row));

    // Alterne l'état du tri
    sortOrder = !sortOrder;
}


</script>

