    <script>
// Écouter les changements dans le filtre de catégorie
document.getElementById('categoryFilter').addEventListener('change', function() {
    filterTable();
});

// Fonction de filtrage
function filterTable() {
    // Récupérer la catégorie sélectionnée
    let selectedCategory = document.getElementById('categoryFilter').value.toLowerCase();

    // Récupérer toutes les lignes du tableau
    let rows = document.querySelectorAll('#atelierTable tbody .atelier-row');

    // Parcourir chaque ligne
    rows.forEach(function(row) {
        // Récupérer le contenu de la cellule de catégorie
        let categoryCell = row.cells[2].textContent.toLowerCase();

        // Appliquer le filtrage
        if (selectedCategory === "" || categoryCell.includes(selectedCategory)) {
            row.style.display = ''; // Afficher la ligne si elle correspond à la catégorie
        } else {
            row.style.display = 'none'; // Cacher la ligne si elle ne correspond pas
        }
    });
}
</script>
