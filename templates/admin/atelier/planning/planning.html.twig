    <script>
   document.addEventListener('DOMContentLoaded', function() {
    var calendarEl = document.getElementById('calendar');
    var events = {{ events|raw }}; // Les √©v√©nements pass√©s depuis Symfony

    var today = new Date();
    today.setHours(0, 0, 0, 0);

    events.forEach(event => {
        var eventDate = new Date(event.start);
        eventDate.setHours(0, 0, 0, 0);

        if (eventDate < today) {
            event.className = 'past-event';
        } else if (eventDate.getTime() === today.getTime()) {
            event.className = 'today-event'; // Marquer les √©v√©nements comme aujourd'hui
        } else {
            event.className = 'future-event';
        }

        // Ajouter une classe en fonction de l'heure
        var startHour = new Date(event.start).getHours();
        if (startHour >= 6 && startHour < 18) {
            event.className += ' fc-event-day'; // Jour
        } else {
            event.className += ' fc-event-night'; // Nuit
        }
    });

    var calendar = new FullCalendar.Calendar(calendarEl, {
        locale: 'fr',
        initialView: 'dayGridMonth', // Mode mois par d√©faut
        headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        events: events,
        showNonCurrentDates: false,
        firstDay: 1,
        nowIndicator: true, // L'indicateur de l'heure actuelle
        eventTextColor: 'white',
        buttonText: {
            today: 'Aujourd\'hui',
            month: 'Mois',
            week: 'Semaine',
            day: 'Jour'
        },
        titleFormat: { 
            month: 'long',
            year: 'numeric',
        },
        eventContent: function(arg) {
            // R√©cup√©rer la date de d√©but et de fin
            var startDate = new Date(arg.event.start);
            var endDate = new Date(arg.event.end);

            // Formater les dates
            var startTime = formatTime(startDate);
            var endTime = formatTime(endDate);

            // Ic√¥ne jour/nuit
            var startHour = startDate.getHours();
            var icon = startHour >= 6 && startHour < 18 ? '‚òÄÔ∏è' : 'üåô';

            // Afficher les informations avec l'ic√¥ne avant l'heure sur la m√™me ligne
            return {
                html: `<div class="fc-event-content">
                           <span class="fc-event-icon">${icon}</span>
                           <span class="fc-event-time">${startTime} - ${endTime}</span>
                           <div class="fc-event-title">${arg.event.title}</div>
                       </div>`
            };
        }
    });

    calendar.render();
});

// Fonction pour formater l'heure (ex: "14:30")
function formatTime(date) {
    var hours = date.getHours().toString().padStart(2, '0');
    var minutes = date.getMinutes().toString().padStart(2, '0');
    return hours + ':' + minutes;
}

