    <!-- Contenu principal -->
   <div class="main-panel">
        <div class="content-wrapper">
          <div class="title-gestion"> Liste des Réclamations </div>

          <div class="table-container">
            <div class="table-title">
              <div class="search-box">
                <i class="fa fa-search"></i>
                <input type="text" placeholder="Rechercher...">
              </div>
            </div>

            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Date</th>
                  <th>Statut</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for reclamation in pagination  %}
                  <tr>
                    <td>{{ reclamation.id }}</td>
                    <td>{{ reclamation.dateReclamation|date('Y-m-d') }}</td>
                    <td>{{ reclamation.statut }}</td>
                    <td>
                      <a href="{{ path('app_reclamation_consulter_admin', {'id': reclamation.id, 'source': 'liste'}) }}" class="btn btn-secondary">Consulter</a>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                      <td colspan="4">Aucune réclamation trouvée.</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>

            <div class="pagination">
              {{ knp_pagination_render(pagination) }} {# Render the pagination controls #}
            </div>
          </div>

          <!-- Diagramme circulaire des statistiques -->
          <div class="statistiques-container">
              <h3 class="titre-statistique">Statistiques des Réclamations</h3>
              <canvas id="pieChart" width="400" height="400"></canvas>
          </div>
      </div>
  </div>
  
