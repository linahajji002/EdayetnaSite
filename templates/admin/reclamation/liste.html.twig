  <style>
      .content-wrapper {
          display: flex;
          flex-direction: column;
          align-items: center;  /* Centre le contenu horizontalement */
          justify-content: center;  /* Centre le contenu verticalement */
          min-height: 100vh;
      }

      .title-gestion {
          margin-bottom: 20px;
          text-align: center;
      }

      #pieChart {
          max-width: 300px;  /* Assure que le diagramme n'excède pas cette taille */
          max-height: 300px; /* Assure que le diagramme n'excède pas cette hauteur */
          width: 100%;
          height: auto;      /* Maintient le ratio d'aspect */
      }

      .main-panel {
          padding: 20px;
      }
  </style>

  <script>
      // Obtenir les pourcentages des statistiques depuis les variables Twig
      const data = {
          labels: ['En attente', 'En cours', 'Répondue'],
          datasets: [{
              data: [
                  {{ percentages['En attente']|number_format(2, '.', '') }},
                  {{ percentages['En cours']|number_format(2, '.', '') }},
                  {{ percentages['Répondue']|number_format(2, '.', '') }}
              ],
              backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
              hoverBackgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
          }]
      };

      const config = {
          type: 'pie',
          data: data,
      };

      // Affichage du graphique
      window.onload = function() {
          const ctx = document.getElementById('pieChart').getContext('2d');
          new Chart(ctx, config);
      };
  </script>

